<div class="title">
	<h1>Articles</h1>
	<div class="line"></div>
</div>

<% if @articles.present?%>

<div class="articles">
	<% @articles.each do |article|%>
	<%= link_to article do %>
	<div class="img-contain">
		<% if article.image.attached?%>
			<%= image_tag article.image, class: "img"%>
		<% end %>
			<h3><%= article.title%></h3>
	<% end %>
	</div>
<% end %>
</div>

<% else %>

<h2>No Article Found</h2>

<% end %>